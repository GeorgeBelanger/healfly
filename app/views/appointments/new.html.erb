
<body>
<p><%= image_tag @provider.image %><br>
<%= @provider.location %><br><br>
<%= @provider.price %><br><br>
<%= @provider.treatment %><br><br>
<%= @provider.language %><br><br>
<%= @provider.qualification %><br><br>
</p
<h1>New Appointment</h1>

<%= form_for ([@provider,@appointment]) do |s| %>
<p> <%= s.label :date, "Date" %>
	<%= s.text_field :date, id:"dateAppoint"%> </p>
<p><%= s.label :start_time, "Start time" %>
	<%= s.text_field :start_time, id:"startAppoint"%></p>
<p> <%= s.label :end_time, "End time" %>
	<%= s.text_field :end_time, id:"endAppoint"%></p>
<%= s.submit %>
<% end %>
<%= link_to 'Back', provider_appointments_path %>
</body>

<script>
	flatpickr('#dateAppoint', {dateFormat: 'd-m-y'})
	flatpickr('#startAppoint', {dateFormat: 'h:i',enableTime: true,noCalendar: true,time_24hour: true})
	flatpickr('#endAppoint', {dateFormat: 'h:i',enableTime: true,noCalendar: true,time_24hour: true})
</script>