<p id="notice"><%= notice %></p>

<h1>Providers</h1>


<%= form_tag search_path do %>
    <%= text_field_tag "search_input", nil, placeholder: "Search Treatment", list: "list" %>
    <%= submit_tag "Search" %>
<%end%>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.id%></td>
        <td><%= provider.name%></td>
        <td><%= provider.treatment%></td>
        <td><%= provider.location%></td>
        <td><%= provider.price%></td>        
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Provider', new_provider_path %>
