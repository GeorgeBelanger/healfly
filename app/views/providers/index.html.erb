<p id="notice"><%= notice %></p>

<h1>Providers</h1>

<%= form_tag search_path, remote: true do%>

  <%= text_field_tag "treatment", nil, placeholder: "by treatment"%>
  <%= text_field_tag "location", nil, placeholder: "by location"%>
  <%= text_field_tag "language", nil, placeholder: "by language"%>
  <%= text_field_tag "min_price", nil, placeholder: "min price"%>
  <%= text_field_tag "max_price", nil, placeholder: "max price"%>

  <%= submit_tag "Search"%>
<%end%>


<div id="provider-listings">
  
  <div class="container">
    <div class="row">    

      <% @providers.each do |provider| %>

           <div class="col-3">        

                <%provider.image.each do |img| %>
                  <p class ="image-container"> <%= image_tag img.url, class: "provider-image"%> </p>
                <%end%>

                <div class="description-container">
                  <p class="provider-listing-description"> Name: <%= provider.name%> </p>       
                  <p class="provider-listing-description"> Treatment: <%= provider.treatment%> </p>
                  <p class="provider-listing-description"> Location: <%= provider.location%> </p>
                  <p class="provider-listing-description"> Language: <%= provider.language%> </p>  
                </div>

                <%= link_to raw('<span></span>'), provider_path(provider), class: "show-button" %> 
                 <%#= link_to 'Edit', edit_provider_path(provider) %>
                 <%#= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %>

           </div>

      <% end %>

    </div>
  </div>

</div>

<br>

