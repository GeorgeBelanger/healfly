<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <div id="profile_form">

    <div id="provider_profile_picture">
    <% if @provider.profile_picture.url != nil %>
    <%= image_tag @provider.profile_picture, :size => "470x545"%>
    <% elsif @provider.fb_picture %>
    <%= image_tag @provider.fb_picture, :size => "470x545"%>
    <% else %>
    <%= image_tag image_url("https://cdn.iconscout.com/public/images/icon/free/png-512/avatar-user-old-lady-3295dab3713f6121-512x512.png"), :size => "150x150" %>
    <% end %>   

    <div class="btn-group"> 
        <%= form_tag provider_path, method: :get, remote: true do %>
        <%= button_tag 'Profile', :class => "buttonProvider", :id => 'ProfileButton'%>
        <%end%>
    </div>

    <div class="btn-group">
        <%= form_tag provider_path, method: :get, remote: true do %>
        <%= button_tag 'Appointment', :class => "buttonProvider", :id => "AppointmentButton" %>
        <%end%>
    </div>
  </div>
